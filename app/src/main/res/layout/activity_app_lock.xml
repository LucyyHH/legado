<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 标题和图标 -->
    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/app_lock"
        android:src="@drawable/ic_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/enter_pin"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_lock" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#F44336"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="@string/wrong_pin"
        tools:visibility="visible" />

    <!-- PIN 输入显示（圆点） -->
    <LinearLayout
        android:id="@+id/ll_pin_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message">

        <View
            android:id="@+id/dot1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/dot2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/dot3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/dot4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/dot5"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/dot6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="6dp"
            android:background="@drawable/pin_dot_empty" />

    </LinearLayout>

    <!-- 数字键盘 -->
    <LinearLayout
        android:id="@+id/keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_2"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_3"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="3"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_5"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="5"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_6"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="6"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="7"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_8"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="8"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_9"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="9"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Row 4: 指纹, 0, 删除 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_biometric"
                style="@style/PinKeypadImageButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/use_biometric"
                android:src="@drawable/ic_fingerprint"
                app:tint="?attr/colorPrimary" />

            <Button
                android:id="@+id/btn_0"
                style="@style/PinKeypadButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:text="0"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/btn_delete"
                style="@style/PinKeypadImageButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/delete"
                android:src="@drawable/ic_backspace"
                app:tint="?android:attr/textColorPrimary" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
